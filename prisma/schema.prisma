generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      UserRole @default(APRENDIZ)
  churchId  String?
  avatar    String?
  isActive  Boolean  @default(true)
  phase     String   @default("1")
  isApproved Boolean @default(false)
  status    UserStatus @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  church           Church?        @relation(fields: [churchId], references: [id])
  entryRequests    EntryRequest[] @relation("UserEntryRequests")
  approvedRequests EntryRequest[] @relation("ApprovedEntryRequests")
  activitiesCreated Activity[]    @relation("ActivityAuthor")
  submissions       Submission[]  @relation("StudentSubmissions")
  gradedSubmissions Submission[]  @relation("Grader")
  contentProgress   ContentProgress[]
  analyticsEvents   AnalyticsEvent[]

  // Indexes
  @@index([role])
  @@index([churchId])
  @@index([isActive])
  @@index([role, churchId])
  @@index([role, churchId, isActive])
  @@index([email, isActive])

  @@map("users")
}

model ContentProgress {
  id                String   @id @default(cuid())
  userId            String
  phase             String
  completedTopics   String[] @default([])
  totalTopics       Int      @default(0)
  progress          Float    @default(0.0) // completedTopics.length / totalTopics
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Indexes
  @@unique([userId, phase])
  @@index([userId])
  @@index([phase])

  @@map("content_progress")
}

model AnalyticsEvent {
  id        String   @id @default(cuid())
  userId    String
  eventType String   // fase_aberta, topico_aberto, resource_aberto, topico_concluido, busca_realizada, fase_desbloqueada_app
  data      Json?    // optional additional data
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([userId])
  @@index([eventType])
  @@index([createdAt])

  @@map("analytics_events")
}

model Church {
  id          String   @id @default(cuid())
  name        String
  description String?
  address     String?
  phone       String?
  email       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users         User[]
  entryRequests EntryRequest[]
  activities    Activity[]

  // Indexes
  @@index([isActive])
  @@index([name])

  @@map("churches")
}

model EntryRequest {
  id          String   @id @default(cuid())
  userId      String
  churchId    String
  professorId String?
  status      RequestStatus @default(EM_ANALISE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user      User    @relation("UserEntryRequests", fields: [userId], references: [id], onDelete: Cascade)
  church    Church  @relation(fields: [churchId], references: [id])
  professor User?   @relation("ApprovedEntryRequests", fields: [professorId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([status])
  @@index([churchId])
  @@index([professorId])
  @@index([status, churchId])
  @@index([userId, status])

  @@map("entry_requests")
}

model Activity {
  id           String         @id @default(cuid())
  title        String
  description  String?
  type         ActivityType   // QUIZ | PDF | TEXTO
  authorId     String
  churchId     String
  author       User           @relation("ActivityAuthor", fields: [authorId], references: [id])
  church       Church         @relation(fields: [churchId], references: [id])
  createdAt    DateTime       @default(now())
  dueDate      DateTime?
  isEdited     Boolean        @default(false)
  phases       ActivityPhase[]
  questions    Question[]
  submissions  Submission[]
}

model ActivityPhase {
  id          String   @id @default(cuid())
  activityId  String
  phaseNumber Int
  activity    Activity @relation(fields: [activityId], references: [id])
}

model Question {
  id          String   @id @default(cuid())
  text        String
  options     String[] // ["A) ...", "B) ..."]
  correct     String
  activityId  String
  activity    Activity @relation(fields: [activityId], references: [id])
}

model Submission {
  id          String           @id @default(cuid())
  studentId   String
  activityId  String
  type        String           // "QUIZ" | "PDF" | "TEXTO"
  answerText  String?
  files       String[]         @default([])
  score       Float?
  feedback    String?
  status      SubmissionStatus @default(PENDING)
  gradedById  String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  student     User             @relation("StudentSubmissions", fields: [studentId], references: [id])
  activity    Activity         @relation(fields: [activityId], references: [id])
  gradedBy    User?            @relation("Grader", fields: [gradedById], references: [id])
}


// Enums
enum UserRole {
  ADMINISTRADOR
  INSTRUTOR
  ENCARREGADO
  APRENDIZ
}

enum UserStatus {
  PENDING
  APPROVED
  REJECTED
  REMOVED
}

enum RequestStatus {
  EM_ANALISE
  APROVADO
  REJEITADO
}

enum ActivityType {
  QUIZ
  PDF
  TEXTO
}

enum SubmissionStatus {
  PENDING
  GRADED
  RETURNED
}
