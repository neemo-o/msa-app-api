generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      UserRole @default(APRENDIZ)
  churchId  String?
  avatar    String?
  isActive  Boolean  @default(true)
  phase     String   @default("1")
  isApproved Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  church           Church?        @relation(fields: [churchId], references: [id])
  entryRequests    EntryRequest[] @relation("UserEntryRequests")
  approvedRequests EntryRequest[] @relation("ApprovedEntryRequests")

  // Indexes
  @@index([role])
  @@index([churchId])
  @@index([isActive])
  @@index([role, churchId])
  @@index([role, churchId, isActive])
  @@index([email, isActive])

  @@map("users")
}

model Church {
  id          String   @id @default(cuid())
  name        String
  description String?
  address     String?
  phone       String?
  email       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users         User[]
  entryRequests EntryRequest[]

  // Indexes
  @@index([isActive])
  @@index([name])

  @@map("churches")
}

model EntryRequest {
  id          String   @id @default(cuid())
  userId      String
  churchId    String
  professorId String?
  status      RequestStatus @default(EM_ANALISE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user      User    @relation("UserEntryRequests", fields: [userId], references: [id], onDelete: Cascade)
  church    Church  @relation(fields: [churchId], references: [id])
  professor User?   @relation("ApprovedEntryRequests", fields: [professorId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([status])
  @@index([churchId])
  @@index([professorId])
  @@index([status, churchId])
  @@index([userId, status])

  @@map("entry_requests")
}


// Enums
enum UserRole {
  ADMINISTRADOR
  INSTRUTOR
  ENCARREGADO
  APRENDIZ
}


enum RequestStatus {
  EM_ANALISE
  APROVADO
  REJEITADO
}
